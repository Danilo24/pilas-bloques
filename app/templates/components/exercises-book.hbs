<Link @href={{href-to "libros.verLibro" book}} @openOnNewTab={{false}}>

  {{#if book.nombre}}
    <div class="exercises-book-image">
      <img src="imagenes/libros/{{book.nombre}}.png"/>
    </div>
  {{/if}}

  <h3 class="book-title">{{book.titulo}}</h3>

  <div class="exercises-book-description">
    <i>{{book.descripcion}}</i>
  </div>
  
</Link>