<PaperToolbar class="header">
  <PaperToolbarTools>

     <a class="pilas-bloques-logo" href="#"><img src='imagenes/logo.png'></a>

    {{#unless model}}

      {{!-- primer ciclo href button --}}
      <PaperButton 
        @disabled={{false}} 
        @raised={{false}} 
        @fab={{false}} 
        @bubbles={{true}} 
        @href={{href-to "libros.verLibro" 1}}>
          {{paper-icon "menu_book" class="menu-button-icon"}}<span class="menu-button-typography">Primer Ciclo</span>
      </PaperButton>

       {{!-- segundo ciclo href button --}}
      <PaperButton 
        @disabled={{false}}
        @raised={{false}}
        @fab={{false}}
        @bubbles={{true}}
        @href={{href-to "libros.verLibro" 2}}>
          {{paper-icon "menu_book" class="menu-button-icon"}}<span class="menu-button-typography">Segundo Ciclo</span>
      </PaperButton>

    {{/unless}}

    {{#if model}}
      {{#if (media 'isMobile')}}
        <NavigationMenu @desafio={{model}}/>
      {{else}}
        <span class="flex"></span>
        <NavigationBreadcrumb @desafio={{model}}/>
      {{/if}}
    {{/if}}

    <span class="flex"></span>
    <SettingsMenu/>

  </PaperToolbarTools>
</PaperToolbar>