<Breadcrumb>

    {{#unless (not (and challenge challenge.titulo))}}
        <BreadcrumbItem class="challenge-title" @selected={{true}} @href={{href-to "desafio" challenge.id}}>
            {{challenge.titulo}}
        </BreadcrumbItem>
    {{/unless}}

    {{#unless (not (and group group.titulo))}}
        <BreadcrumbItem @href={{href-to "libros.verLibro" book.id}}>
            {{group.titulo}}
        </BreadcrumbItem>
    {{/unless}}

    {{#unless (not (and chapter chapter.titulo))}}
        <BreadcrumbItem @href={{href-to "libros.verLibro" book.id}}>
            {{chapter.titulo}}
        </BreadcrumbItem>
    {{/unless}}

    {{#unless (not (and book book.titulo))}}
        <BreadcrumbItem @href={{href-to "libros.verLibro" book.id}}>
            {{book.titulo}}
        </BreadcrumbItem>
    {{/unless}}

    <BreadcrumbItem @initial={{true}} @href={{href-to "index"}}>
        {{paper-icon "home"}}
    </BreadcrumbItem>

</Breadcrumb>