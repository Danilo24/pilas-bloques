{{yield}}
<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header navbar-collapse">
      <a class="navbar-brand" href="#">
        <img src="imagenes/logo.png" />
      </a>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <LinkTo @route="libros" @tagName="li">
          <a href="#">
            <i class="fa fa-home"></i>
            Principal
          </a>
        </LinkTo>
        <LinkTo @route="libros.verLibro" @model={{1}} @tagName="li">
          <a href="#">
            <i class="fa fa-book"></i>
            1er Ciclo
          </a>
        </LinkTo>
        <LinkTo @route="libros.verLibro" @model={{2}} @tagName="li">
          <a href="#">
            <i class="fa fa-book"></i>
            2do Ciclo
          </a>
        </LinkTo>
        <LinkTo @route="acercade" @tagName="li">
          <a href="#">
            <i class="fa fa-info-circle"></i>
            Acerca de
          </a>
        </LinkTo>
      </ul>
      <div class="header-right">
        <div class="navbar-header navbar-collapse">
          <!-- Haciendo que el logo de programar no se colapse, y desaparezca en mobile. -->
          {{#unless media.isMobile}}
            <PilasLink @href="http://program.ar">
              <img src="imagenes/programar-short.png" />
            </PilasLink>
          {{/unless}}
        </div>
        {{!-- {{pilas-automatic-update}} --}}
        <button class="header-button" id="abrir-ayuda" {{action "abrirAyuda"}}>
          {{fa-icon "question"}}
        </button>
      </div>
    </div>
  </div>
</nav>
