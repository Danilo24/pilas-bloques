<div
  class="contenido-principal
    {{if model.modoLecturaSimple "aplicar-modo-lectura-simple"}}"
>
  <h1>
    Desafíos del
    {{model.titulo}}
  </h1>
  <p>
    <LinkTo @route="libros">
      <i class="fa fa-chevron-left"></i>
      Volver a la lista de libros
    </LinkTo>
  </p>
  {{#each model.grupos as |grupo|}}
    <h2>
      {{grupo.titulo}}
    </h2>
    {{#each grupo.desafios as |desafio|}}
      <PilasDesafio @model={{desafio}} />
    {{/each}}
  {{else}}
    <p class="mensaje-sin-desafios">
      Lo siento, no hay desafíos para este manual aún.
    </p>
  {{/each}}
  {{#if model.grupos.isSettled}}

  {{else}}
    <PilasCargando />
  {{/if}}
</div>